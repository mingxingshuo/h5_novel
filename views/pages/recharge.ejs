<script>
$(function() {
  $(".recharge-list").on("tap", "li", function() {
    $(this).siblings('li').removeClass('selected');  // 删除其他兄弟元素的样式
    $(this).addClass('selected');
  })
  $(".submit").tap(function() {
    let price = $(".recharge-list li.selected").attr("data-price")
    let info = location.search, redirecturl = ""
    if(info) {
      let bid = info.split("=")[1].split("&")[0]
      let id = info.split("=")[2].split("&")[0]
      let title = info.split("=")[3]
      redirecturl = "/content?bid=" + bid + "&id=" + id + "&title=" + title;
    } else {
      redirecturl = "/account"
    }
    window.location.href = "/needPay?price=" + price;
  })
})
</script>
